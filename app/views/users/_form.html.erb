<div id="div_form"> 

  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="for_field_input">
      <div class="label_for_field_input">Имя:</div>
      <%= f.text_field :name, class: "field_input" %>
    </div>
  
    <div class="for_field_input">
      <div class="label_for_field_input">Email:</div>
      <%= f.text_field :email, class: "field_input" %>
    </div>

    <div class="for_field_input">
      <div class="label_for_field_input">Пароль:</div>
      <%= f.password_field :password, class: "field_input" %>
    </div>

    <div class="for_field_input">
      <div class="label_for_field_input">Повтор:</div>
      <%= f.password_field :password_confirmation, class: "field_input" %>
    </div>

    <%= f.submit "Принять", class: "submit" %>

  <% end %>

</div>
