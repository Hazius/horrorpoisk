<div id="div_wrapper_description_of_top_big_label">
    <%= link_to(films_path(year_from: "1960", year_to: "2014")) do %>
        <div id="div_description_of_top_big_label">Сейчас в кинотеатрах:</div>
    <% end %>    
</div>

<div id="slider-wrap">
  <div id="slider">
    <div class="slide" style="position: absolute; top: 0px; left: 0px; display: none">
      <%= image_tag "mnogonogka_1.png", class: "img_for_slider_top" %>
      <%= image_tag "top.png", class: "img_for_slider_top" %>
    </div>
    <div class="slide" style="position: absolute; top: 0px; left: 0px; display: block">
      <%= image_tag "top.png", class: "img_for_slider_top" %>
      <%= image_tag "mnogonogka_1.png", class: "img_for_slider_top" %>
    </div> 
  </div>
</div>

<div id="div_search">
	<%= form_tag( 	search_path(), 
					{ method: "get" } ) do %>	
		
					
		<%= text_field_tag :name_film_at_search, nil, id: "field_input_of_search" %>
		
	
		<%= submit_tag "", id: "submit_of_search" %>	


	<% end %>
</div>	