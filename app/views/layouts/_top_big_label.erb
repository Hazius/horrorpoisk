        <div id="div_description_of_top_big_label">Сейчас в кинотеатрах:</div>
    <% end %>    
</div>

<% @films = Film.where(now_in_cinemas: true) %>

<div id="slider-wrap">
  <div id="slider">

    <% i = 0 %>

    <% @films.each do | film | %>

        <% if(i == 0) %>
            <div class="slide" style="position: absolute; top: 0px; left: 0px; display: block">
            <% i = 2 %> 
        <% elsif(i == 1) %>
            <div class="slide" style="position: absolute; top: 0px; left: 0px; display: none">
            <% i = 2 %>  
        <% end %>

        <% 2.times do %>
            <%= link_to(image_tag(film.image, class: "img_for_slider_top"), film_path(film)) %>
        <% end %>    

        <% if(i == 2) %>                
            </div>
            <% i = 1 %>   
        <% end %>            

    <% end %>

