<%= link_to(search_path(future_in_cinemas: "true")) do %>
    <div class="div_bt_show_future_in_cinemas">Скоро в кинотеатрах:</div>
<% end %>

<% @films = Film.where(future_in_cinemas: true) %>

<% @films.each do | film | %>

    <%= link_to film_path(film) do %>
        <div class="div_element_right_panel">
            <%= image_tag "films/#{film.image}.jpg", class: "img_top_of_element_right_panel" %>            
            <div class="div_bottom_of_element_right_panel">
                <div class="div_bt_show_bottom_of_element_right_panel">
                    Показать описание
                </div>
                <b><%= film.name_rus %></b> 
                <br />
                <span style="color: #808080;"><%= film.name_eng %></span>
                <br />
                <b>Режиссер:</b> <%= film.producer %>
                <br />
                <b>Описание:</b> <%= film.full_description %>
            </div>         
        </div>
    <% end %>

<% end %>

