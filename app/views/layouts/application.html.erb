<!DOCTYPE html>
<html>
<head>
  	<title>horrorpoisk</title>
  	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  	<%= csrf_meta_tags %>
</head>
<body>

	<div id="wrapper">	

		<div id="div_navigation_top"> 			
			<ul id="ul_navigation_top">
				<li class="li_navigation_top"><%= link_to("Главная", root_path, class: "a_navigation_top") %></li>
				<li class="li_navigation_top"><%= link_to("Регистрация", new_user_path, class: "a_navigation_top") %></li>
				<li class="li_navigation_top"><%= link_to("Вход", new_session_path, class: "a_navigation_top") %></li>
			</ul>
 		</div>

		<div id="div_top">	
			<div id="div_form">		
				<%= yield(:form) %>	
			</div>				
 		</div>

 		<div id="div_select_year">
 			<ul id="ul_select_year">
 				<li class="bt_select_year"><%= link_to("1960 - н.в.", films_path) %></li>
 				<li class="bt_select_year">1960 - 1990</li>
 				<li class="bt_select_year">1990 - 2000</li>
 				<li class="bt_select_year">2000 - 2010</li>
 				<li class="bt_select_year">2010 - н.в.</li>
 			</ul>
 		</div> 		

		<%= yield %>

		<div class="clear"></div>	
		<div><%= debug(params) if Rails.env.development? %></div>

	</div>

	

</body>
</html>
